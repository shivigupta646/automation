			 * for(int i=0;i<3;i++) { for(int j=0; j<=i;j++) { System.out.print("*"); }
			 * System.out.println(); }
			 */
		/*
		 * for (int i=0;i<5;i++) { for(int j=i;j<=4;j++) { System.out.print("*"); }
		 * System.out.println(); }
		 */

		/*
		 * for(int i=0;i<10;i++) { for(int j=i;j<=9;j++) { System.out.print("i"); }
		 * System.out.println(); }
		 */

		/*
		 * for(int i=0;i<=3;i++) { for(int j=0;j<=i;j++) { System.out.print(j); }
		 * System.out.println(); }
		 * 
		 * 
		 * for(int i=1;i<=6;i++) { for(int j=i;j<=5;j++) {
		 * 
		 * 
		 * System.out.print(j); } System.out.println();
		 * 
		 * }
		 */
		/*
		 * for(int i=1;i<=9;i++) { for(int j=i;j<=8;j++) { System.out.print(j); }
		 * System.out.println(); }
		 */

		/*
		 * for(int i=2;i<=5;i++) { for(int j=i;j<=6;j++) { System.out.print(j); }
		 * System.out.println();
		 * 
		 * }
		 */
		/*
		 * for(int i=0;i<=4;i++) { for(int j=i;j<=3;j++) { System.out.print("* "); }
		 * System.out.println(); }
		 */

		/*
		 * for(int i=1; i<=5; i++) { System.out.print("*"); }
		 * 
		 * System.out.println();
		 * 
		 * for(int j = 1; j<=3; j++) { System.out.println("* "); }
		 */
		 
		/*
		 * for(int i=0; i<=5;i++) {
		 *  for(int j=1; j<=i; j++) {
		 *   System.out.print(" ");
		 *    }
		 * for(int j=i; j<=5;j++) {
		 *  System.out.print("* "); 
		 *  } 
		 *  System.out.println();
		 * 
		 * }
		 *  for(int i=1; i<=5; i++) {
		 *   for (int j=i; j<=5; j++) { 
		 *   System.out.print(" ");
		 * } 
		 * for(int j=1;j<=i;j++) {
		 *  System.out.print("* ");
		 *   }
		 *    System.out.println();
		 *     }
		 */
		for(int i=0;i<=5; i++) {
			for(int j=1;j<=i;j++) {
				System.out.print(" ");
			}
			for(int j=i; j<=5;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		for(int i=0; i<=6; i++) {
			for(int j=i; j<=6; j++) {
				System.out.print(" ");
			}
			for(int j=1; j<=i; j++) {
				System.out.print("* ");
			}
			System.out.println();
			}
		}
	}

